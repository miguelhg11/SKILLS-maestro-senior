      "4xl": {
        "$value": "2.25rem",
        "$type": "fontSize",
        "$description": "36px"
      },
      "5xl": {
        "$value": "3rem",
        "$type": "fontSize",
        "$description": "48px"
      },
      "6xl": {
        "$value": "3.75rem",
        "$type": "fontSize",
        "$description": "60px"
      },
      "7xl": {
        "$value": "4.5rem",
        "$type": "fontSize",
        "$description": "72px"
      }
