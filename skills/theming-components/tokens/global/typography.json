{
  "$schema": "https://www.designtokens.org/tr/2025.10/",
  "font": {
    "family": {
      "sans": {
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif",
        "$type": "fontFamily",
        "$description": "Primary sans-serif font stack"
      },
      "serif": {
        "$value": "'Georgia', 'Times New Roman', serif",
        "$type": "fontFamily",
        "$description": "Serif font stack"
      },
      "mono": {
        "$value": "'Fira Code', 'Menlo', 'Monaco', 'Courier New', monospace",
        "$type": "fontFamily",
        "$description": "Monospace font stack for code"
      }
    },
    "size": {
      "xs": {
        "$value": "0.75rem",
