      "tighter": {
        "$value": "-0.05em",
        "$type": "dimension"
      },
      "tight": {
        "$value": "-0.025em",
        "$type": "dimension"
      },
      "normal": {
        "$value": "0",
        "$type": "dimension"
      },
      "wide": {
        "$value": "0.025em",
