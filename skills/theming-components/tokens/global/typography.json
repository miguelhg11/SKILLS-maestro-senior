      },
      "normal": {
        "$value": "400",
        "$type": "fontWeight",
        "$description": "Regular weight"
      },
      "medium": {
        "$value": "500",
        "$type": "fontWeight"
      },
      "semibold": {
        "$value": "600",
        "$type": "fontWeight"
      },
      "bold": {
        "$value": "700",
        "$type": "fontWeight"
      },
      "extrabold": {
        "$value": "800",
        "$type": "fontWeight"
      },
      "black": {
        "$value": "900",
        "$type": "fontWeight"
      }
    },
    "line-height": {
      "none": {
        "$value": "1",
        "$type": "number",
        "$description": "No line height spacing"
      },
      "tight": {
        "$value": "1.25",
        "$type": "number",
        "$description": "Tight line spacing for headings"
      },
      "snug": {
        "$value": "1.375",
        "$type": "number"
      },
      "normal": {
        "$value": "1.5",
